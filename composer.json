{
    "name": "macbre/monolog-utils",
    "description": "Additional formatters and processors for Monolog",
    "keywords": ["log", "logging"],
    "homepage": "https://github.com/macbre/monolog-utils",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maciej Brencz",
            "email": "maciej.brencz@gmail.com"
        }
    ],
    "require": {
        "monolog/monolog": "^3.3",
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Macbre\\Logger\\": "src/Macbre/",
            "Macbre\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-html _coverage"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
